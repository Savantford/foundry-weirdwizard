<section class="tab{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">

    {{!-- Name Stripe --}}
    {{> "systems/weirdwizard/templates/items/common/name-stripe.hbs" }}
    
    {{!-- Sheet Header --}}
    <header class="sheet-header">
        
        {{!-- Details Area --}}
        {{#each detailsPartial as |part|}}
            {{> (part) @root}}
        {{/each}}

        {{!-- Right Ribbon --}}
        {{> "systems/weirdwizard/templates/items/common/item-ribbon.hbs" }}

    </header>

    {{!-- Description --}}
    <prose-mirror name="system.description" data-document-u-u-i-d="{{item.uuid}}" value="{{system.description}}"
        toggled collaborate compact editable={{editable}}>
        {{{system.descriptionEnriched}}}
    </prose-mirror>

    {{!-- Granted By --}}
    {{#if grantedBy}}
    <div class="stat-inline mt-1">
        <label>{{localize "WW.CharOption.GrantedBy"}}:</label>
        {{{ grantedBy }}}
    </div>
    {{/if}}

    {{#if usedBy}}
    <ol class="used-by stat-inline list-entries mt-1">
        <label>{{localize "WW.Item.UsedBy"}}:</label>
        {{#each usedBy as |actor|}}
        <li>{{{ actor }}}</li>
        {{/each}}
    </ol>
    {{/if}}

</section>
<details class="document-card">

    {{!-- Card Header --}}
    <summary class="card-header">

        <div class="card-banner">
            <img src="{{img}}">
        </div>

        <div class="title-wrapper">
            <div class="card-title">{{label}}</div>
            <div class="card-subtitle">{{subtitle}}</div>
        </div>

    </summary>

    {{!-- Main Card Body --}}
    <div class="card-body">

        <hr class="spear" />

        {{!-- Spell Subheader --}}
        {{#if (eq type 'Spell')}}
        <header class="card-subheader">
            <div><b>{{localize "WW.Spell.Castings"}}:</b> {{system.uses.max}}{{#if system.casting}}, {{system.casting}}{{/if}}</div>
            <div><b>{{localize "WW.Spell.Target"}}:</b> {{system.target}}</div>
            <div><b>{{localize "WW.Spell.Duration"}}:</b> {{system.duration}}</div>
        </header>
        {{/if}}

        {{!-- Description --}}
        <div class="card-text">
            {{{text}}}
        </div>

        {{!-- Bug Separator --}}
        <hr class="bug">

    </div>

    {{!-- Outer Footer ---}}
    {{#if inSheet}}
    <footer class="tooltip-footer">
        <p>{{{localize "WW.Item.Perform.Left"}}}</p>
        <p>{{{localize "WW.Item.Perform.Shift"}}}</p>
        <p>{{{localize "WW.Item.Perform.Ctrl"}}}</p>
        <p>{{{localize "WW.Item.Perform.Alt"}}}</p>
        <p>{{{localize "WW.Item.Perform.Right"}}}</p>
    </footer>
    {{/if}}

</details>
<form class="weirdwizard compendium-index">
    
    <div class="flexrow stat mb-2">
        <div class="flexrow">
            <label>{{localize "WW.System.Index.Compendium"}}</label>

            <select data-action="changeCompendium">
                {{selectOptions compendiumList selected=selectedCompendium}}
            </select>
        </div>

        <div class="flexrow">
            <label>{{localize "WW.System.Index.TableType"}}</label>

            <select data-action="changeType">
                {{selectOptions types selected=tableType localize=true}}
            </select>
        </div>

    </div>

    <nav class="sheet-tabs tabs" style="display: none;" aria-role="{{localize 'SHEETS.FormNavLabel'}}">
    {{#each tabs as |tab|}}
    <a class="{{tab.cssClass}}" data-action="tab" data-group="{{tab.group}}" data-tab="{{tab.id}}">
        <i class="{{tab.icon}}"></i>
        <label>{{localize tab.label}}</label>
    </a>
    {{/each}}
    </nav>
    
</form>

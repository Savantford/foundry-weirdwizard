<form>
   
   {{!-- Weapon/Attack Header --}}
    <div>
        <h3>{{label}}</h3>

        <div class="h3-box">
            <div class="stat-stretch flex-group-left">
                <label class="resource-label">{{localize "WW.RollDamage.Base"}}</label>
                <input name="applyBase" class="damage-checkbox applyBase" type="checkbox" data-tooltip="WW.RollDamage.BaseApply" checked="true">
                +{{baseDamage}}
            </div>

            {{#if versatile}}
            <div class="stat-stretch flex-group-left">
                <label class="resource-label">{{localize "WW.RollDamage.BothHands"}}</label>
                <input name="bothHands" class="damage-checkbox bothHands" type="checkbox" data-tooltip="WW.RollDamage.BothHandsApply">
                +1d6
            </div>
            {{/if}}

        </div>
    </div>

    <div>
        {{!-- Bonus Damage Container --}}
        {{#if (and isAttack bonusDamage)}}
        <h3>{{localize "WW.Damage.Bonus"}}</h3>

        <div class="h3-box">

            {{!-- Bonus Damage Widget --}}
            <div class="adjustment-widget">
                <a data-action="down" data-tooltip="<p>{{localize "WW.RollDamage.Bonus.Reduce"}}</p><p>{{localize "WW.RollDamage.Bonus.ReduceShift"}}</p>"><i class="fa-solid fa-square-minus"></i></a>
                <span class="mx-1"><input class="bonus-damage" name="bonusDamage" type="number" value="{{bonusDamage}}" data-tooltip="WW.RollDamage.Bonus.Hint"/>d6</span>
                <a data-action="up" data-tooltip="<p>{{localize "WW.RollDamage.Bonus.Increase"}}</p><p>{{localize "WW.RollDamage.Bonus.IncreaseShift"}}</p>"><i class="fa-solid fa-square-plus"></i></a>
            </div>

        </div>
        {{/if}}
    </div>

    {{!-- Extra Damage --}}
    <div>
        
        <h3>{{localize "WW.RollDamage.Extra.Label"}}</h3>

        <div class="h3-box">

            {{!-- Attack Dice --}}
            {{#if attackDice}}
            <div class="stat-stretch flex-group-left">
                <label class="resource-label">{{localize "WW.RollDamage.Extra.AttackDice"}}</label>
                <input name="attackDice" class="damage-checkbox attackDice" type="checkbox" data-tooltip="WW.RollDamage.Extra.AttackDiceApply" checked="true">
                +{{attackDice}}d6
            </div>
            {{/if}}
            
            {{!-- Attack Modifier --}}
            {{#if attackMod}}
            <div class="stat-stretch flex-group-left">
                <label class="resource-label">{{localize "WW.RollDamage.Extra.AttackMod"}}</label>
                <input name="attackMod" class="damage-checkbox attackMod" type="checkbox" data-tooltip="WW.RollDamage.Extra.AttackModApply" checked="true">
                +{{attackMod}}
            </div>
            {{/if}}

            {{!-- Other Dice --}}
            <div class="stat-stretch flex-group-left" data-tooltip="WW.RollDamage.Extra.OtherDiceHint">
                <label class="resource-label">{{localize "WW.RollDamage.Extra.OtherDice"}}</label>
                +
                <input name="otherdice" class="damage-input otherdice" type="number" value="0" min="0"/>
                d6
            </div>

            {{!-- Other Modifier --}}
            <div class="stat-stretch flex-group-left" data-tooltip="WW.RollDamage.Extra.OtherModHint">
                <label class="resource-label">{{localize "WW.RollDamage.Extra.OtherMod"}}</label>
                +
                <input name="othermod" class="damage-input othermod" type="number" value="0" min="0"/>
            </div>

        </div>
        
    </div>

    {{!-- Damage Expression --}}
    <div class="damage-expression flex-group-center">{{expression}}</div>

    {{#if brutal}}
    <div class="brutal-hint">{{{localize "WW.RollDamage.BrutalHint"}}}</div>
    {{/if}}

    {{!-- Form Buttons --}}
    <div class="form-group">
        <button type="submit" id="damage-submit">
            <i class="fa-solid fa-dice"></i> {{localize "WW.Roll.Label"}}
        </button>
        <button type="button" id="damage-cancel">
            <i class="fa-solid fa-x"></i> {{localize "WW.System.Dialog.Cancel"}}
        </button>
    </div>

</form>


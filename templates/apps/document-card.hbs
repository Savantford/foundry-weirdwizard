<{{#if inline}}details{{else}}div{{/if}} class="document-card">

        {{#if inline}}
        {{!-- Card Header --}}
        <summary class="card-header">
                <div class="card-banner">
                    <img src="{{img}}">
                </div>

                <div class="title-wrapper">
                    <div class="card-title">{{label}}</div>
                    <div class="card-subtitle">{{subtitle}}</div>
                </div>

        </summary>
        {{else}}
        {{!-- Image Banner --}}
        <div class="card-banner">
            <img src="{{img}}">
        </div>
        {{/if}}

        {{!-- Main Card Body --}}
        <div class="card-body">

            {{#if inline}}
            <hr class="spear" />
            {{else}}
            {{!-- Tooltip Card Header --}}
            <header class="card-header">

                <div class="title-wrapper">
                    <div class="card-title">{{label}}</div>
                    <div class="card-subtitle">{{subtitle}}</div>
                </div>

            </header>
            {{/if}}

            {{!-- Spell Subheader --}}
            {{#if (eq type 'Spell')}}
            <header class="card-subheader">
                <b>{{localize "WW.Spell.Castings"}}:</b> {{system.uses.max}}, {{system.casting}}
                <b>{{localize "WW.Spell.Castings"}}:</b> {{system.uses.max}}
                <b>{{localize "WW.Spell.Target"}}:</b> {{system.target}}
                <b>{{localize "WW.Spell.Duration"}}:</b> {{system.duration}}
            </header>
            {{/if}}

            {{!-- Description --}}
            <div class="card-text">
                {{{text}}}
            </div>

            {{!-- Bug Separator --}}
            <hr class="bug">

        </div>

        {{!-- Outside Footer ---}}
        {{#if inSheet}}
        <footer class="tooltip-footer">
            <p>{{{localize "WW.Item.Perform.Left"}}}</p>
            <p>{{{localize "WW.Item.Perform.Shift"}}}</p>
            <p>{{{localize "WW.Item.Perform.Ctrl"}}}</p>
            <p>{{{localize "WW.Item.Perform.Alt"}}}</p>
            <p>{{{localize "WW.Item.Perform.Right"}}}</p>
        </footer>
        {{/if}}

</{{#if inline}}details{{else}}div{{/if}}>
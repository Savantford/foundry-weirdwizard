<div>

  <section class="header-section weirdwizard">

    {{!-- Right Banner --}}
    {{#if singlePage}}
    <header class="sheet-banner-wrapper">

      {{!-- Category --}}
      <div class="type">{{ localize (lookup @root.professionCategories system.category) }}</div>

      <div class="icon-frame">
        <img src="{{ document.src }}" data-edit="src" data-tooltip="WW.System.ViewImage" />
      </div>

    </header>
    {{/if}}

    {{#if title.show}}
    {{> "systems/weirdwizard/templates/journal/parts/journal-page-header.hbs" this=this }}
    {{/if}}

    {{!-- Page Content (Editor/Description) --}}
    <section class="journal-page-content">
      {{{editor.content}}}
    </section>

  </section>
  
  {{!-- Benefits Section --}}
  <section class="benefits-section weirdwizard">

    {{!-- Benefit Block --}}
    <div class="benefit-block">
      
      {{!-- Bonus Languages --}}
      {{#if listEntries.benefit1.languages.length}}
      <ol class="stat-inline list-entries">
        <label>{{localize "WW.ListEntry.Language.Bonus"}}:</label>
  
        {{#each listEntries.benefit1.languages as |entry|}}
        <li class="list-entry">
          <a data-tooltip="{{entry.desc}}">{{entry.name}}</a>
        </li>
        {{/each}}
  
      </ol>
      {{/if}}
  
      {{!-- Item List Area --}}
      {{#if benefits.benefit1.itemsInfo}}
      <ol class="described-list items-area benefit1">

        {{!-- Populate Items --}}
        {{#each benefits.benefit1.itemsInfo as |item id|}}
        <li class="item-reference item {{#if item.missing}}missing{{/if}}" data-item-uuid="{{item.uuid}}">
          <label><img src="{{item.img}}"> {{item.name}}:</label>
  
          <span>{{{item.description}}}</span>
        </li>
        {{/each}}

      </ol>
      {{/if}}
  
    </div>

  </section>

</div>
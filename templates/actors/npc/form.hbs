<section class="scrollable">

  <div class="details">
    {{!-- Folder Name / Creature Group --}}
    {{#if folder}}
    <div class="folder-info">
      <h2>
        {{#if folder.name}}{{folder.name}}{{else}}{{localize "WW.Actor.Folder.Unnamed"}}{{/if}}</h2>

      {{!-- Folder / Creature Group Description --}}
      <div class="description">
        {{!-- Profile Image --}}
        <img class="profile-img" style="--profile-img: url(/{{ source.img }})" src="{{ source.img }}"
          data-action="editImage" data-edit="img" alt="{{localize "EFFECT.FIELDS.img.label"}}">

        {{#if folder.flags.weirdwizard.description}}
          {{{ folder.flags.weirdwizard.description }}}
        {{else}}
          {{localize "WW.Actor.Folder.NoDescription"}}
        {{/if}}
      </div>

      <button class="edit-folder" data-action="folderEdit"><i class="fa-solid fa-edit"></i></button>
    </div>
    {{else}}
      {{localize "WW.Actor.Folder.None"}}
    {{/if}}

    {{!-- Bestiary Entry Name --}}
    <h4 class="pointed-right mt-2">{{ actor.name }}</h4>

    {{!-- Individual Traits --}}
    <h5 class="individual-traits">
      {{#with individualTraits}}
      {{formInput field name=name value=value}}
      {{/with}}
    </h5>

    {{!-- Description --}}
    <prose-mirror name="system.description" data-document-u-u-i-d="{{actor.uuid}}" value="{{actor.system.description}}"
      toggled collaborate compact owner={{owner}} editable={{editable}}>
      {{{actor.system.descriptionEnriched}}}
    </prose-mirror>

  </div>
  
  {{!-- Statbox --}}
  <div class="statbox">

    {{!-- Name --}}
    <h4 class="statbox-name">
      <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "WW.Actor.Name"}}" />
    </h4>
  
    {{!-- Descriptor / Difficulty Row --}}
    <h5 class="descriptors flex-group-left">
  
      {{!-- Descriptors --}}
      <ol class="list-entries">
        {{#each listEntries.descriptors as |entry|}}
        {{> "systems/weirdwizard/templates/generic/list-entry.hbs" entry=entry entryKey=entry.key
        listKey="descriptors" loc="Descriptor"}}
        {{else}}
        <span>({{localize "WW.ListEntry.Descriptor.Label"}})</span>
        {{/each}}
  
        <a class="array-button" data-action="entryCreate" data-list-key="descriptors" data-loc="Descriptor"
          data-tooltip="WW.ListEntry.Descriptor.Create"><i class="fa-solid fa-circle-plus"></i></a>
  
        <a class="array-button" data-action="entrySettings" data-list-key="descriptors"
          data-tooltip="WW.Settings.Entry.DisplayList"><i class="fa-solid fa-list"></i></a>
      </ol>
  
      <span>· {{localize "WW.Stats.Difficulty"}}</span>
  
      {{!-- Difficulty ---}}
      <select name="system.stats.difficulty">
        {{selectOptions difficulties selected=system.stats.difficulty}}
      </select>
  
    </h5>
  
      {{!-- Edit Mode Stats --}}
      <div class="statbox-section">
  
        {{!-- Defense, Health --}}
        <div class="stat-inline flex-wrap flex-children">
  
          {{!-- Defense --}}
          <div class="defense-line">
            <label>{{localize "WW.Defense.NaturalNPC"}}:</label>
  
            {{!-- Natural Defense --}}
            {{formInput stats.defenseNatural.field name=stats.defenseNatural.name value=stats.defenseNatural.sourceValue}}
  
          </div>
  
          {{!-- Health --}}
          <div class="nowrap">
  
            <label>{{localize "WW.Health.NormalNPC"}}:</label>
  
            <div class="input-wrap">
              <input type="number" name="system.stats.health.normal" value="{{system.stats.health.normal}}" min="0" />
  
              <div class="input-overlay">{{system.stats.health.normal}}</div>
            </div>
  
          </div>
  
        </div>
  
        {{!-- Equipment --}}
        <div class="stat equipment-list">
  
          <label>{{localize "WW.Equipment.Label"}}:</label>
          {{#each equipment as |item id|}}
          {{> "systems/weirdwizard/templates/actors/npc/parts/summary-item.hbs" item=item id=id}}
          {{else}}
          <span>—</span>
          {{/each}}
  
          <a class="item-create" data-action="itemCreate" data-tooltip="WW.Item.Create.Equipment" data-type="equipment"
            data-subtype="generic"><i class="fa-solid fa-plus-circle"></i></a>
  
        </div>
  
        {{!-- Attributes 1 --}}
        <div class="mt-1 stat-inline">
  
          {{!-- Strength --}}
          <label><a class="item-button" data-action="attributeRoll" data-key="str"
              data-tooltip="WW.Roll.Strength">{{localize "WW.Attributes.Strength"}}:</a></label>
  
          <div class="input-wrap">
            <input type="number" name="system.attributes.str.value" value="{{system.attributes.str.value}}" min="0"
              placeholder="—" data-dtype="Number" />
  
            <div class="input-overlay">{{system.attributes.str.value}}</div>
          </div>
  
          {{#if system.attributes.str.value}}
          <a class="attribute-mod item-button" data-action="attributeRoll" data-key="str" data-tooltip="WW.Roll.Agility">
            ({{numberFormat system.attributes.str.mod decimals=0 sign=true}})
          </a>
          {{/if}}
  
          {{!-- Agility --}}
          <label class="ml-1"><a class="item-button" data-action="attributeRoll" data-key="agi"
              data-tooltip="WW.Roll.Agility">{{localize "WW.Attributes.Agility"}}:</a></label>
  
          <div class="input-wrap">
            <input type="number" name="system.attributes.agi.value" value="{{system.attributes.agi.value}}" min="0"
              placeholder="—" data-dtype="Number" />
  
            <div class="input-overlay">{{system.attributes.agi.value}}</div>
          </div>
  
          {{#if system.attributes.agi.value}}
          <a class="attribute-mod item-button" data-action="attributeRoll" data-key="agi" data-tooltip="WW.Roll.Agility">
            ({{numberFormat system.attributes.agi.mod decimals=0 sign=true}})
          </a>
          {{/if}}
  
        </div>
  
        {{!-- Attributes 2 --}}
        <div class="stat-inline">
  
          {{!-- Intellect --}}
          <label><a class="item-button" data-action="attributeRoll" data-key="int"
              data-tooltip="WW.Roll.Intellect">{{localize "WW.Attributes.Intellect"}}:</a></label>
  
          <div class="input-wrap">
            <input type="number" name="system.attributes.int.value" value="{{system.attributes.int.value}}" min="0"
              placeholder="—" data-dtype="Number" />
  
            <div class="input-overlay">{{system.attributes.int.value}}</div>
          </div>
  
          {{#if system.attributes.int.value}}
          <a class="attribute-mod item-button" data-action="attributeRoll" data-key="int"
            data-tooltip="WW.Roll.Intellect">
            ({{numberFormat system.attributes.int.mod decimals=0 sign=true}})
          </a>
          {{/if}}
  
          {{!-- Will --}}
          <label class="ml-1"><a class="item-button" data-action="attributeRoll" data-key="wil"
              data-tooltip="WW.Roll.Will">{{localize "WW.Attributes.Will"}}:</a></label>
  
          <div class="input-wrap">
            <input type="number" name="system.attributes.wil.value" value="{{system.attributes.wil.value}}" min="0"
              placeholder="—" data-dtype="Number" />
  
            <div class="input-overlay">{{system.attributes.wil.value}}</div>
          </div>
  
          {{#if system.attributes.wil.value}}
          <a class="attribute-mod item-button" data-action="attributeRoll" data-key="wil" data-tooltip="WW.Roll.Will">
            ({{numberFormat system.attributes.wil.mod decimals=0 sign=true}})
          </a>
          {{/if}}
  
        </div>
  
        {{!-- Size, Speed --}}
        <ol class="mt-1 stat-inline list-entries movement-traits">
          {{!-- Size --}}
          <label>{{ stats.size.label }}:</label>
  
          {{ formInput stats.size.field name=stats.size.name value=stats.size.sourceValue dataset=(object
          tooltip=stats.size.inputTooltip) }}
  
          ({{ stats.size.displayedValue }})
  
          {{!-- Speed --}}
          <label class="ml-1">{{localize "WW.Stats.SpeedNormalNPC"}}:</label>
  
          {{ formInput stats.speedNormal.field name=stats.speedNormal.name value=stats.speedNormal.sourceValue
          dataset=(object tooltip=stats.speedNormal.inputTooltip) }}
  
          {{!-- Movement Traits --}}
          {{#each listEntries.movementTraits as |entry|}}
          {{> "systems/weirdwizard/templates/generic/list-entry.hbs" entry=entry entryKey=entry.key
          listKey="movementTraits" loc="MovementTrait"}}
          {{/each}}
  
          <a class="array-button" data-action="entryCreate" data-list-key="movementTraits" data-loc="MovementTrait"
            data-tooltip="WW.ListEntry.MovementTrait.Create"><i class="fa-solid fa-circle-plus"></i></a>
  
          <a class="array-button" data-action="entrySettings" data-list-key="movementTraits"
            data-tooltip="WW.Settings.Entry.DisplayList"><i class="fa-solid fa-list"></i></a>
  
        </ol>
  
      </div>
  
      {{!-- Traits and Talents --}}
      <div class="statbox-section talents-section">
  
        {{!-- Heading --}}
        <h6>
          <img src="systems/weirdwizard/assets/icons/skills.svg" />
          <span>{{localize "WW.Talents.Traits"}}</span>
  
          <span class="add-buttons">
  
            <a class="item-create" data-action="itemCreate" data-tooltip="WW.Item.Create.Trait" data-type="talent"
              data-subtype="trait">
              {{localize "WW.Talents.Traits"}}
              <i class="fa-solid fa-plus-circle"></i>
            </a>
  
            <a class="item-create" data-action="itemCreate" data-tooltip="WW.Item.Create.Equipment" data-type="equipment"
              data-subtype="generic">
              {{localize "WW.Equipment.Label"}}
              <i class="fa-solid fa-plus-circle"></i>
            </a>
  
          </span>
  
        </h6>
  
        {{!-- Languages --}}
        <ol class="stat-inline list-entries">
          <label>{{localize "WW.ListEntry.Language.Label"}}:</label>
  
          {{#each listEntries.languages as |entry|}}
          {{> "systems/weirdwizard/templates/generic/list-entry.hbs" entry=entry entryKey=entry.key
          listKey="languages" loc="Language"}}
          {{else}}
          <span>—</span>
          {{/each}}
  
          <a class="array-button" data-action="entryCreate" data-list-key="languages" data-loc="Language"
            data-tooltip="WW.ListEntry.Language.Create"><i class="fa-solid fa-circle-plus"></i></a>
  
          <a class="array-button" data-action="entrySettings" data-list-key="languages"
            data-tooltip="WW.Settings.Entry.DisplayList"><i class="fa-solid fa-list"></i></a>
        </ol>
  
        {{!-- Senses --}}
        <ol class="stat-inline list-entries">
          <label>{{localize "WW.ListEntry.Sense.Label"}}:</label>
  
          {{#each listEntries.senses as |entry key|}}
          {{> "systems/weirdwizard/templates/generic/list-entry.hbs" entry=entry entryKey=entry.key
          listKey="senses"
          loc="Sense"}}
          {{else}}
          <span>—</span>
          {{/each}}
  
          <a class="array-button" data-action="entryCreate" data-list-key="senses" data-loc="Sense"
            data-tooltip="WW.ListEntry.Sense.Create"><i class="fa-solid fa-circle-plus"></i></a>
  
          <a class="array-button" data-action="entrySettings" data-list-key="senses"
            data-tooltip="WW.Settings.Entry.DisplayList"><i class="fa-solid fa-list"></i></a>
        </ol>
  
        {{!-- Immune --}}
        <ol class="stat-inline list-entries">
          <label>{{localize "WW.ListEntry.Immunity.Label"}}:</label>
  
          {{#each listEntries.immunities as |entry key|}}
          {{> "systems/weirdwizard/templates/generic/list-entry.hbs" entry=entry entryKey=entry.key
          listKey="immunities" loc="Immunity"}}
          {{else}}
          <span>—</span>
          {{/each}}
  
          <a class="array-button" data-action="entryCreate" data-list-key="immunities" data-loc="Immunity"
            data-tooltip="WW.ListEntry.Immunity.Create"><i class="fa-solid fa-circle-plus"></i></a>
  
          <a class="array-button" data-action="entrySettings" data-list-key="immunities"
            data-tooltip="WW.Settings.Entry.DisplayList"><i class="fa-solid fa-list"></i></a>
        </ol>
  
        {{!-- Traits or Talents --}}
        <ol class="described-list">
          {{#each talents as |item id|}}
          {{> "systems/weirdwizard/templates/actors/npc/parts/summary-item.hbs" item=item id=id}}
          {{/each}}
        </ol>
  
        {{!-- Equipment --}}
        <div class="stat equipment-list">
  
          <label>{{localize "WW.Equipment.Label"}}:</label>
  
          {{#each equipment as |item id|}}
          {{> "systems/weirdwizard/templates/actors/npc/parts/summary-item.hbs" item=item id=id}}
          {{/each}}
  
          {{#unless equipment.length}}<span>—</span>{{/unless}}
  
        </div>
  
      </div>
  
  
  
      {{!-- Actions Section --}}
      <div class="statbox-section actions">
  
        {{!-- Actions Header --}}
        <h6>
          <img src="systems/weirdwizard/assets/icons/actions.svg" />
  
          <span>{{localize "WW.Talents.Actions"}}</span>
  
          <span class="add-buttons">
  
            <a class="item-create" data-action="itemCreate" data-tooltip="WW.Item.Create.Weapon" data-type="equipment"
              data-subtype="weapon" data-grip="Natural">
              {{localize "WW.Attack.Plural"}}
              <i class="fa-solid fa-plus-circle"></i>
            </a>
  
            <a class="item-create" data-action="itemCreate" data-tooltip="WW.Item.Create.Trait" data-type="talent"
              data-subtype="action">
              {{localize "WW.Talents.SpecialActions"}}
              <i class="fa-solid fa-plus-circle"></i>
            </a>
  
          </span>
  
        </h6>
  
        {{!-- Attacks --}}
        <ol class="described-list attacks-list">
          {{#each weapons as |item id|}}
          {{> "systems/weirdwizard/templates/actors/npc/parts/summary-weapon.hbs" item=item id=id}}
          {{/each}}
        </ol>
  
        {{!-- Special Actions --}}
        <ol class="described-list actions-list">
          {{#each actions as |item id|}}
          {{> "systems/weirdwizard/templates/actors/npc/parts/summary-item.hbs" item=item id=id}}
          {{/each}}
        </ol>
  
        {{!-- Spells --}}
        <ol class="described-list spells-list">
          {{#each spells as |item id|}}
          {{> "systems/weirdwizard/templates/actors/npc/parts/summary-item.hbs" item=item id=id}}
          {{/each}}
        </ol>
  
      </div>
  
      {{!-- Reactions Section --}}
      <div class="statbox-section reactions">
  
        <h6>
          <img src="systems/weirdwizard/assets/icons/reactions.svg" />
          <span>{{localize "WW.Talents.Reactions"}}</span>
          <a class="item-create ml-auto" data-action="itemCreate" data-type="talent" data-subtype="reaction"
            data-tooltip="WW.Item.Create.Trait"><i class="fa-solid fa-plus"></i>
          </a>
        </h6>
  
        <ol class="described-list">
          {{#each reactions as |item id|}}
          {{> "systems/weirdwizard/templates/actors/npc/parts/summary-item.hbs" item=item id=id}}
          {{/each}}
        </ol>
  
      </div>
  
      {{!-- End of Round Section --}}
      <div class="statbox-section ends">
  
        <h6>
          <img src="systems/weirdwizard/assets/icons/duration.svg" />
          <span>{{localize "WW.Talents.Ends"}}</span>
          <a class="item-create ml-auto" data-action="itemCreate" data-type="talent" data-subtype="end"
            data-tooltip="WW.Item.Create.Trait"><i class="fa-solid fa-plus"></i>
          </a>
        </h6>
  
        <ol class="described-list">
          {{#each end as |item id|}}
          {{> "systems/weirdwizard/templates/actors/npc/parts/summary-item.hbs" item=item id=id}}
          {{/each}}
        </ol>
  
      </div>
  
  </div>

</section>